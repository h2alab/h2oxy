---
import { Button, FormInput, FormSelect, FormTextarea } from '@littlesticks/odyssey-theme-components';

const selectOptions = [
  "Pesquisa no Google",
  "Mídia Social",
  "Email",
]

---

<form name="Formulário de Contato" method="POST" action="/contact-thank-you">
  <FormInput type="text" label="Nome" name="Name" placeholder="Seu Nome" />
  <FormInput type="email" label="Email" name="Email" placeholder="ola@examplo.com" />
  <FormSelect label="Como ficou sabendo sobre nós?" options={selectOptions} />
  <FormTextarea label="Menssagem" name="Message" placeholder="Sua mensagem aqui..." />
  <Button>Submit</Button>
</form>

<style>
  form {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }
</style>