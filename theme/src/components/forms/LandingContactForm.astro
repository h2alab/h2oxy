---
import {Icon} from 'astro-icon'
import { Button, FormInput, FormSelect, FormTextarea } from '@littlesticks/odyssey-theme-components';

const selectOptions = [
  "Pesquisa no Google",
  "Mídia Social",
  "Email",
]

---

<form name="Formulário de Contato" method="POST" action="/contact-thank-you" >
  <FormInput type="text" label="Primeiro Nome" name="First Name" placeholder="" />
  <FormInput type="text" label="Sobrenome" name="Last Name" placeholder="" />
  <FormInput type="email" label="Email" name="Email" placeholder="hello@example.com" />
  <Button customIcon>Enviar
    <Fragment slot="icon">
      <Icon name="ic:baseline-chevron-right" />
    </Fragment>
  </Button>
</form>

<style>
  form {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }
</style>